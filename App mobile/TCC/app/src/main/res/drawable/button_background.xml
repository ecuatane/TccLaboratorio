<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <stroke android:width="3dp" android:color="#FF404040" />

        <corners android:radius="6dp" />

        <gradient android:angle="90" android:centerColor="#0099cc" android:endColor="#0099cc" android:startColor="#0099cc" />
    </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
        <stroke android:width="1dp" android:color="#FF404040" />

        <corners android:radius="4dp" />

        <gradient android:angle="90" android:centerColor="#FAFAFC" android:endColor="#F6F6F8" android:startColor="#FCFCFD" />
    </shape></item>

</selector>